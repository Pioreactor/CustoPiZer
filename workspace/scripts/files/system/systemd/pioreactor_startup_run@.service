[Unit]
Description=Start up %I on boot.
Wants=network-online.target
After=network-online.target firstboot.service load_rp2040.service local_access_point.service

[Service]
User=pioreactor
ExecStart=pio run %I
Restart=no
Environment="PATH=/home/pioreactor/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin"
Environment="LG_WD=/tmp"

[Install]
WantedBy=multi-user.target
